{
  "private": true,
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/.next/",
      "/node_modules",
      "/cypress/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "/.next/",
      "/node_modules",
      "/cypress/"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|ts|tsx)$": [
        "babel-jest",
        {
          "presets": [
            "next/babel"
          ]
        }
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleDirectories": [
      "/node_modules/",
      "utils"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "next",
      "prettier"
    ]
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ],
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint",
    "*.{js,ts,tsx,json,md}": "prettier --write",
    "*.{test,spec}.{ts,tsx,js}": "yarn test"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "e2e:watch": "cypress open",
    "e2e:run": "cypress run",
    "test": "pnpm test:unit",
    "fmt": "prettier --write .",
    "pretty": "pnpm fmt && pnpm lint"
  },
  "dependencies": {
    "@apollo/client": "3.7.16",
    "@chakra-ui/next-js": "^2.1.4",
    "@chakra-ui/react": "^2.7.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "date-fns": "^2.30.0",
    "deepmerge": "^4.3.1",
    "framer-motion": "^10.12.18",
    "graphql": "^16.7.1",
    "next": "13.4.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.10.1",
    "styled-components": "^5.3.10",
    "universal-cookie": "^4.0.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.9",
    "babel-jest": "^29.5.0",
    "babel-plugin-styled-components": "^2.1.3",
    "cypress": "^12.14.0",
    "eslint": "^8.42.0",
    "eslint-config-next": "^13.4.4",
    "eslint-config-prettier": "^8.8.0",
    "husky": ">=8.0.3",
    "jest": "^29.5.0",
    "lint-staged": ">=13.2.2",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  }
}
