{
  "name": "miconomy-web",
  "private": true,
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/.next/",
      "/node_modules",
      "/cypress/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "/.next/",
      "/node_modules",
      "/cypress/"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": [
        "babel-jest",
        {
          "presets": [
            "next/babel"
          ]
        }
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleDirectories": [
      "/node_modules/",
      "utils"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true
        }
      ]
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "next",
      "prettier"
    ]
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint",
    "*.{js,jsx,ts,tsx,json,md,mdx}": "prettier --write",
    "*.{test,spec}.{ts,tsx,js,jsx}": "yarn test"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "e2e:watch": "cypress open",
    "e2e:run": "cypress run",
    "test": "yarn test:unit",
    "lint": "next lint",
    "fmt": "prettier --write .",
    "pretty": "yarn fmt && yarn lint"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@apollo/client": "^3.6.5",
    "antd": "^4.20.6",
    "date-fns": "^2.28.0",
    "deepmerge": "^4.2.2",
    "graphql": "^16.5.0",
    "next": "12.1.6",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "^5.3.5",
    "universal-cookie": "^4.0.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.0.9",
    "babel-jest": "^28.1.0",
    "babel-plugin-styled-components": "^2.0.7",
    "cypress": "^9.7.0",
    "eslint": "^8.16.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "husky": ">=8.0.1",
    "jest": "^28.1.0",
    "lint-staged": ">=12.4.2",
    "prettier": "^2.6.2",
    "typescript": "^4.7.2"
  }
}
